;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "code-printer")
  ;; Library version
  (version "0.1.0")
  ;; Files
  (sources
    ((packageDir "src")))
  ;; OPAM package file
  (opam "satysfi-code-printer.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
     (fonts-dejavu ())
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "code-printer-doc")
  ;; Library version
  (version "0.1.0")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "code-printer-ja.saty" "-o" "code-printer-ja.pdf")))
  ;; Files
  (sources
    ((doc "code-printer-ja.pdf" "doc/code-printer-ja.pdf")))
  ;; OPAM package file
  (opam "satysfi-code-printer-doc.opam")
  ;; Dependency
  (dependencies
    ((code-printer ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
    )))
