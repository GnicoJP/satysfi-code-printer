      comment = set-comment-color (from-hex 0x9699A3);
      string = set-string-color (from-hex 0x485E30);
      keyword = set-keyword-color (from-hex 0x8C4351);
      identifier = set-identifier-color (from-hex 0x34548A);
      others = [];
    |)

end
