      comment = set-comment-color (from-hex 0x8389A3);
      string = set-string-color (from-hex 0x3F83A6);
      keyword = set-keyword-color (from-hex 0x2D539E);
      identifier = set-identifier-color (from-hex 0x7759B4);
      others = [];
    |)


